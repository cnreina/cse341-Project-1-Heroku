<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/headInclude.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigationInclude.ejs') %>
        <main>
            <% if (items.length > 0) { %>
                <ul class="cart__item-list">
                    <% items.forEach(item => { %>
                        <li class="cart__item">
                            <h1><%= item.itemId.title %></h1>
                            <h2>Quantity: <%= item.quantity %></h2>
                            <form action="/user/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= item.itemId._id %>" name="itemId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="centered">
                    <a class="btn" href="/user/checkout">Order Item</a>
                </div>
                
            <% } else { %>
                <h1>Cart is empty</h1>
            <% } %>
        </main>
        <%- include('../includes/javascriptInclude.ejs') %>
    </body>
</html>